{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6"],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules", "tests", "example", "lib", "jest.config.ts", "*.d.ts", "**/*.d.ts"]
}
